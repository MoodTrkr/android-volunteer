<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="simpleCard">
        <item name ='android:background'>@drawable/simple_card</item>
        <item name = 'android:layout_rowWeight'>0.8</item>
        <item name = 'android:orientation'>@integer/one</item>
        <item name = 'android:layout_height'>wrap_content</item>
        <item name = 'android:layout_width'>match_parent</item>
        <item name = 'android:paddingLeft'>30dp</item>
        <item name = 'android:paddingRight'>30dp</item>
        <item name = 'android:paddingTop'>40dp</item>
        <item name = 'android:paddingBottom'>40dp</item>
    </style>

    <style name="mainBackground">
        <item name = 'android:background'>@drawable/main_background</item>
        <item name ='android:layout_width'>match_parent</item>
        <item name ='android:layout_height'>match_parent</item>
        <item name ='android:padding'>20dp</item>
    </style>

    <style name="regularHeader" parent = "TextAppearance.AppCompat">
        <item name = 'android:textColor'>#38455C</item>
        <item name = 'android:layout_height'>wrap_content</item>
        <item name = 'android:layout_width'>match_parent</item>
        <item name = 'android:textSize'>30dp</item>
        <item name = 'android:fontFamily'>@font/noto_sans_bold</item>
        <item name = 'android:lineSpacingMultiplier'>0.9</item>
    </style>
    <style name="subHeader" parent = "TextAppearance.AppCompat">
        <item name = 'android:textColor'>#1C5471</item>
        <item name = 'android:layout_height'>wrap_content</item>
        <item name = 'android:layout_width'>match_parent</item>
        <item name = 'android:textSize'>15dp</item>
        <item name = 'android:fontFamily'>@font/source_sans_pro_regular</item>
    </style>
    <style name="clickableTextDark" parent = "TextAppearance.AppCompat">
        <item name = 'android:textColor'>#6C7F94</item>
        <item name = 'android:layout_height'>wrap_content</item>
        <item name = 'android:layout_width'>match_parent</item>
        <item name = 'android:textSize'>20dp</item>
        <item name = 'android:fontFamily'>@font/source_sans_pro_regular</item>
    </style>
    <style name="largeHeader" parent = "TextAppearance.AppCompat">
        <item name = 'android:textColor'>#38455C</item>
        <item name = 'android:layout_height'>wrap_content</item>
        <item name = 'android:layout_width'>match_parent</item>
        <item name = 'android:textSize'>40dp</item>
        <item name = 'android:fontFamily'>@font/noto_sans_bold</item>
        <item name = 'android:lineSpacingMultiplier'>0.9</item>
    </style>
    <style name="lightText" parent = "TextAppearance.AppCompat">
        <item name = 'android:textColor'>#EAEDFE</item>
        <item name = 'android:layout_height'>wrap_content</item>
        <item name = 'android:layout_width'>match_parent</item>
        <item name = 'android:textSize'>17dp</item>
        <item name = 'android:fontFamily'>@font/source_sans_pro_regular</item>
        <item name = 'android:lineSpacingMultiplier'>0.9</item>
    </style>
    <style name="darkText" parent = "TextAppearance.AppCompat">
        <item name = 'android:textColor'>#838895</item>
        <item name = 'android:layout_height'>wrap_content</item>
        <item name = 'android:layout_width'>match_parent</item>
        <item name = 'android:textSize'>15dp</item>
        <item name = 'android:fontFamily'>@font/source_sans_pro_regular</item>
        <item name = 'android:lineSpacingMultiplier'>0.9</item>
    </style>


    <style name = "defaultColLinLayout">
        <item name = 'android:orientation'>@integer/one</item>
        <item name = 'android:layout_height'>wrap_content</item>
        <item name = 'android:layout_width'>match_parent</item>
    </style>


    <style name="MiddleOptionButton">
        <item name = 'android:backgroundTint'>#426588</item>
        <item name = "android:textAllCaps">false</item>
        <item name = 'android:layout_height'>wrap_content</item>
        <item name = 'android:layout_width'>match_parent</item>
        <item name = 'android:textColor'>#EAEDFE</item>
        <item name = 'android:textSize'>17dp</item>
        <item name = 'android:fontFamily'>@font/source_sans_pro_regular</item>
        <item name = 'android:lineSpacingMultiplier'>0.9</item>
        <item name = 'android:background'>@drawable/middle_option_button</item>
        <item name = 'android:layout_marginBottom'>3dp</item>
        <item name = 'android:layout_marginTop'>3dp</item>
        <item name = 'android:gravity'>left|center_vertical</item>
    </style>

    <style name="TopOptionButton">
        <item name = "android:textAllCaps">false</item>
        <item name = 'android:layout_height'>wrap_content</item>
        <item name = 'android:layout_width'>match_parent</item>
        <item name = 'android:textColor'>#EAEDFE</item>
        <item name = 'android:textSize'>17dp</item>
        <item name = 'android:fontFamily'>@font/source_sans_pro_regular</item>
        <item name = 'android:lineSpacingMultiplier'>0.9</item>
        <item name = 'android:background'>@drawable/top_option_button</item>
        <item name = 'android:layout_marginBottom'>3dp</item>
        <item name = 'android:layout_marginTop'>3dp</item>
    </style>
    <style name="BottomOptionButton">
        <item name = "android:textAllCaps">false</item>
        <item name = 'android:layout_height'>wrap_content</item>
        <item name = 'android:layout_width'>match_parent</item>
        <item name = 'android:textColor'>#EAEDFE</item>
        <item name = 'android:textSize'>17dp</item>
        <item name = 'android:fontFamily'>@font/source_sans_pro_regular</item>
        <item name = 'android:lineSpacingMultiplier'>0.9</item>
        <item name = 'android:background'>@drawable/bottom_option_button</item>
        <item name = 'android:layout_marginBottom'>3dp</item>
        <item name = 'android:layout_marginTop'>3dp</item>
    </style>
</resources>