<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="30dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style ="@style/subHeader"
            android:paddingRight="10dp"
            android:text = "0">

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style ="@style/subHeader"
            android:text = "day streak">

        </TextView>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:progress="0"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_height="20dp" />

    <LinearLayout
        style = "@style/simpleCard"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="@integer/one"
            >
            <TextView
                style = "@style/subHeader"
                android:id="@+id/title"
                android:text="@string/survey_title"
               />
            <TextView
                style = "@style/regularHeader"
                android:id="@+id/prompt"
                android:text="Question"
                android:layout_marginBottom="30dp"/>

            <ImageView
                android:id="@+id/meme"
                android:layout_width="wrap_content"
                android:layout_height="400dp"
                android:padding="0dp"
                android:layout_margin="0dp"
                app:srcCompat="@drawable/cute_animal_0" />
        </LinearLayout>


        <LinearLayout
            style = "@style/defaultColLinLayout"
            android:id="@+id/options"
            android:layout_marginBottom="10dp"
            >
            <Button
                android:id="@+id/optionOne"
                style="@style/MiddleOptionButton"
                android:backgroundTint="#71ADEA"/>

            <Button
                android:id="@+id/optionTwo"
                style="@style/MiddleOptionButton"
              />
            <Button
                android:id="@+id/optionThree"
                style="@style/MiddleOptionButton" />
            <Button
                android:id="@+id/optionFour"
                style="@style/MiddleOptionButton" />
            <Button
                android:id="@+id/optionFive"
                style="@style/MiddleOptionButton" />
            <Button
                android:id="@+id/optionSix"
                style="@style/MiddleOptionButton" />

        </LinearLayout>
        <TextView
            android:id="@+id/back"
            style="@style/clickableTextDark"
            android:text="Previous Question"
 />



    </LinearLayout>
</LinearLayout>

